{% extends 'base.html.twig' %}
{% block title %}{{ 'general.home'|trans({}, 'translations') }}{% endblock %}
{% block additionalStyle %}
    {#<link href="{{ asset('build/css/signIn.css') }}" rel="stylesheet">#}
{% endblock %}
{% block body %}
    <div class="container">
        <header class="blog-header py-3">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-4 pt-1">
                    {% block menu1 %}
                        <a class="text-muted" href="{{ path('cus_subscription') }}">Subscribe</a>
                    {% endblock %}
                </div>
                <div class="col-4 text-center">
                    <a class="blog-header-logo text-dark" href="">
                        {#<img src="{{ asset('Images/voa.png') }}"#}
                             {#class="img-fluid w-50" alt="logo">#}
                    </a>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-center">
                    <a class="text-muted" href="#">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none"
                             stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                             class="mx-3">
                            <circle cx="10.5" cy="10.5" r="7.5"></circle>
                            <line x1="21" y1="21" x2="15.8" y2="15.8"></line>
                        </svg>
                    </a>
                    <a class="btn btn-sm btn-outline-secondary"
                       href="{{ path('login') }}">Se connecter</a>
                </div>
            </div>
        </header>
        <div class="nav-scroller py-1 mb-2">
            <nav class="nav d-flex justify-content-between ">
                <a class="p-2 text-muted " href="#">Home</a>
                <a class="p-2 text-muted" href="#">Contact us</a>
            </nav>
        </div>
    </div>
    {% block maincontent %}
        <main role="main" class="container">
            <h3 class="display-5">{{ 'general.our_product'|trans({}, 'translations') }}</h3>
            <br>
            {% include 'product/listProductContent.html.twig' %}
        </main>
    {% endblock %}
{% endblock %}
