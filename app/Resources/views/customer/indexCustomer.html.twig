{% endblock %}
{% block body %}
    <div class="container">
        <header class="blog-header py-3">
            <div class="row flex-nowrap justify-content-between align-items-center">
                <div class="col-4 pt-1">
                    <a class="text-muted" href="#">{{ 'general.welcome_user'|trans({'name': app.user.usrFirstName~' '~app.user.usrLastName} , 'translations') }}</a>
                </div>
                <div class="col-2 text-center">
                    <h2 class="display-5">{{ 'general.home'|trans({}, 'translations') }}</h2>
                </div>
                <div class="col-4 d-flex justify-content-end align-items-center">
                    {{ app.user|showDetailCurrentOrderCustomer|raw }}
                </div>
                <div class="col-2 d-flex justify-content-end align-items-center">
                    <a class="btn btn-sm btn-outline-secondary"
                       href="{{ path('logout') }}"><i class="material-icons md-13">power_settings_new</i> {{ 'form.logout'|trans({}, 'translations') }}
                    </a>
                </div>
            </div>
        </header>
        <div class="nav-scroller py-1 mb-2">
            <nav class="nav d-flex">
                <a class="p-2 {% block activeProduct %}text-muted{% endblock %}" href="{{ path('cus_home') }}"><i class="material-icons md-18">spa</i> {{ 'general.product'|trans({}, 'translations') }}</a>
                <a class="p-2 {% block activeMyOrder %}text-muted{% endblock %}" href="{{ path('cus_order_customer') }}"><i class="material-icons md-18">hot_tub</i> {{ 'general.my_order'|trans({}, 'translations') }}</a>
                {#<a class="p-2 text-muted" href="#">Design</a>#}
                {#<a class="p-2 text-muted" href="#">Culture</a>#}
                {#<a class="p-2 text-muted" href="#">Business</a>#}
                {#<a class="p-2 text-muted" href="#">Politics</a>#}
                {#<a class="p-2 text-muted" href="#">Opinion</a>#}
                {#<a class="p-2 text-muted" href="#">Science</a>#}
                {#<a class="p-2 text-muted" href="#">Health</a>#}
                {#<a class="p-2 text-muted" href="#">Style</a>#}
                {#<a class="p-2 text-muted" href="#">Travel</a>#}
            </nav>
        </div>
    </div>
    {% block maincontent %}
    {% endblock %}
{% endblock %}
