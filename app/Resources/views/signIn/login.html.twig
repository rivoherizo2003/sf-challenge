{% extends 'base.html.twig' %}
{% block title %}{{ 'general.authentication'|trans({}, 'translations') }}{% endblock %}
{% block additionalStyle %}
    <link href="{{ asset('build/css/signIn.css') }}" rel="stylesheet">
{% endblock %}
{% block bodyClass %}text-center{% endblock %}
{% block body %}
    <form class="form-signin" action="{{ path('login_check') }}" method="POST">
        <img class="mb-4" src="{{ asset('pictures/symfony_128x128.png') }}" alt="" width="100" height="100">
        {#<img class="mb-4" src="{{ asset('bundles/AppBundle/images/logvoafafi-4.png') }}" alt="" width="30%" height="72">#}
        {% if p_aeAuthenticationError %}
            <div>{{ p_aeAuthenticationError.messageKey|trans(p_aeAuthenticationError.messageData, 'security') }}</div>
        {% endif %}
        <h1 class="h3 mb-3 font-weight-normal">{{ 'general.authentication'|trans({}, 'translations') }}</h1>
        <label for="inputEmail" class="sr-only">{{ 'form.email'|trans({}, 'translations') }} </label>
        <input type="text" id="username" name="_username" value="" class="form-control"
               placeholder="{{ 'form.email'|trans({}, 'translations') }}" required autofocus/>
        {#<input type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>#}
        <label for="inputPassword" class="sr-only">{{ 'form.password'|trans({}, 'translations') }}</label>
        <input type="password" id="password" name="_password" class="form-control"
               placeholder="{{ 'form.password'|trans({}, 'translations') }}" required>
        {#<div class="checkbox mb-3">#}
        {#<label>#}
        {#<input type="checkbox" value="remember-me"> Remember me#}
        {#</label>#}
        {#</div>#}

        <button class="btn btn-lg btn-primary btn-block"
                type="submit">{{ 'form.sign_in'|trans({}, 'translations') }}</button>

        <div class="p-2">
            <a class="reset_pass" href="{{ path('cus_subscription') }}">{{ 'general.customer_subscribe'|trans({}, 'translations') }}?</a>
        </div>

        <div>
            <a class="" href="{{ path('homepage') }}"><i
                        class="material-icons md-24">home</i>{{ 'general.home'|trans({}, 'translations') }}</a>

        </div>
    </form>
{% endblock %}
